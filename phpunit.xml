<?xml version="1.0" encoding="UTF-8"?>

<phpunit
        backupGlobals="false"
        backupStaticAttributes="false"
        colors="true"
        stopOnFailure="false"
        verbose="true"
        bootstrap="./vendor/autoload.php"
>
    <testsuites>
        <testsuite name="UserSystem Test Suite">
            <directory phpVersion="7.0.0" phpVersionOperator=">=">./tests/</directory>
        </testsuite>
    </testsuites>
    <php>
        <ini name="display_errors" value="1"/>
        <ini name="error_reporting" value="30719"/>
        <ini name="display_startup_errors" value="1"/>
    </php>
</phpunit>